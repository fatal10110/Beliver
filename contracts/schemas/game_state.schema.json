{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GameState",
  "type": "object",
  "required": ["turn", "players", "units", "cities"],
  "properties": {
    "turn": { "type": "integer", "minimum": 0 },
    "players": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "faction", "resources"],
        "properties": {
          "id": { "type": "string" },
          "faction": { "type": "string" },
          "resources": {
            "type": "object",
            "required": ["faith", "food", "wood", "devotion"],
            "properties": {
              "faith": { "type": "number" },
              "food": { "type": "number" },
              "wood": { "type": "number" },
              "devotion": { "type": "number" }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    },
    "units": { "type": "array", "items": { "type": "object" } },
    "cities": { "type": "array", "items": { "type": "object" } }
  },
  "additionalProperties": false
}
