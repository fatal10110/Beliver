generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Game {
  id          String   @id @default(uuid())
  status      String   // PRE_GAME, IN_PROGRESS, FINISHED
  currentTurn Int      @default(0)
  state       Json     // Full flexible game state (Hexes, Units, Factions)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
